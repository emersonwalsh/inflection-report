{
  "name": "inflection-report",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "deploy": "ng deploy",
    "build:data": "node ../scripts/buildAngularData.js",
    "build:hostinger": "rm -rf dist/inflection-report && ng build --base-href=/googletrends/ && mkdir -p dist/inflection-report/browser/auth/callback && cp dist/inflection-report/browser/index.html dist/inflection-report/browser/auth/callback/index.html && mkdir -p dist/inflection-report/browser/login && cp dist/inflection-report/browser/index.html dist/inflection-report/browser/login/index.html",
    "zip:hostinger": "rm -f googletrends.zip && cd dist/inflection-report/browser && zip -r ../../../googletrends.zip .",
    "deploy:hostinger": "npm run build:hostinger && npm run zip:hostinger"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/cdk": "^21.0.6",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@supabase/supabase-js": "^2.91.0",
    "chart.js": "^4.5.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "angular-cli-ghpages": "^3.0.2",
    "autoprefixer": "^10.4.23",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.2"
  }
}
